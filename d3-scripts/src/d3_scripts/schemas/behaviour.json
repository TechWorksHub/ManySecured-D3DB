{
  "$id": "https://example.com/behaviour.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "behaviour",
  "type": "The device behaviour schema in terms of rule id and name",
  "properties": {
    "id": {
      "type": "string",
      "description": "GUID for the device"
    },
    "ruleId": {
      "type": "string",
      "description": "GUID for the behaviour rule"
    },
    "ruleName": {
      "type": "string",
      "description": "Rule name"
    }
  },
  "required": [
    "id",
    "ruleId",
    "protocolName"
  ]
}