{
  "$id": "https://example.com/behaviour-proto-eth.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "behaviour-eth",
  "type": "The eth protocol behaviour rule",
  "properties": {
    "ruleId": {
      "type": "string",
      "description": "GUID for the behaviour rule"
    },
    "sourceMac": {
      "type": "string",
      "description": "The source MAC address"
    },
    "destinationMac": {
      "type": "string",
      "description": "The destination MAC address"
    },
    "etherType": {
      "type": "number",
      "description": "The ethernet type field"
    }
  },
  "required": ["ruleId"]
}