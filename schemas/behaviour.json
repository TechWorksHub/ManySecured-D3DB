{
  "$id": "https://example.com/behaviour.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "behaviour",
  "type": "The device behaviour schema in terms of rule id and name",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "GUID for the behviour"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": {"$ref": "behaviour-rule.schema.json"}
      },
      "description": "GUID for the behaviour rule"
    },
    "name": {
      "type": "string",
      "description": "Behaviour name"
    }
  },
  "required": ["id", "rules"]
}