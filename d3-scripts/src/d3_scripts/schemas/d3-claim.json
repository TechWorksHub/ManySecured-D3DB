{
    "$id": "https://example.com/d3-claim.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "d3-claim",
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "enum": [
          "d3-behaviour",
          "d3-device-type-assertion",
          "d3-device-type-inheritance",
          "d3-device-type-vuln",
          "d3-firmware"
        ],
        "description": "D3 claim type"
      },
      "credentialSubject": {
        "oneOf": [
          {"type": {"$ref": "type.json"}},
          {"type": {"$ref": "behaviour.json"}}
        ],
        "description": "The array of strings with aliases"
      },
      "issuer": {
        "type": "string",
        "description": "The credential issuer"
      }
    },
    "required": ["type", "credentialSubject"]
  }
